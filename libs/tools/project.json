{
  "projectType": "library",
  "root": "libs/tools",
  "sourceRoot": "libs/tools/src",
  "prefix": "bookhistory",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": ["dist/libs/tools"],
      "options": {
        "project": "libs/tools/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/tools/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/tools/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/tools"],
      "options": {
        "jestConfig": "libs/tools/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/tools/src/**/*.ts",
          "libs/tools/src/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
